<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="005-insert-default-roles" author="system">
        <comment>Insert default roles: ADMIN and USER</comment>
        
        <insert tableName="roles">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="ROLE_ADMIN"/>
            <column name="description" value="Administrator role with full access"/>
        </insert>
        
        <insert tableName="roles">
            <column name="id" valueNumeric="2"/>
            <column name="name" value="ROLE_USER"/>
            <column name="description" value="Standard user role with limited access"/>
        </insert>

        <rollback>
            <delete tableName="roles">
                <where>name IN ('ROLE_ADMIN', 'ROLE_USER')</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>
